# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cs text eol=lf diff=csharp
*.csx text eol=lf diff=csharp
*.vb text eol=lf
*.fs text eol=lf

# Solution and project files
*.sln text eol=lf merge=union
*.csproj text eol=lf merge=union
*.vbproj text eol=lf merge=union
*.fsproj text eol=lf merge=union
*.proj text eol=lf
*.props text eol=lf
*.targets text eol=lf

# Configuration files
*.config text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf
LICENSE* text eol=lf

# Binary files
*.dll binary
*.exe binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.snupkg binary
*.nupkg binary
